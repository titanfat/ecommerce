<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
    <% end %>
<% unless card.line_items.empty? %>
  <h2> Your Cart </h2>
  <table>
    <%= render(card.line_items) %>
    <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%= number_to_currency(card.total_price) %></td>
    </tr>
    </tfoot>
  </table>
  <%= button_to "Empty cart", card, method: :delete,
                data: { confirm: "You are sure?" } %>
<% end %>
</article>